{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "dependencyDashboard": false,
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": ["/^version\\.txt$/"],
      "matchStrings": ["^(?<currentValue>\\S+)$"],
      "datasourceTemplate": "maven",
      "packageNameTemplate": "dev.kensa:kensa-core",
      "versioningTemplate": "maven"
    }
  ],
  "packageRules": [
    { "matchManagers": ["gradle", "github-actions", "dockerfile", "npm"], "enabled": false }
  ],
  "automerge": true,
  "automergeType": "branch",
  "platformAutomerge": false,
  "rebaseWhen": "behind-base-branch",
  "requiredStatusChecks": ["Build"]
}